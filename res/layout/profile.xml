<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical" android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/headerLayout" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_marginBottom="6dip">
        <ImageView android:id="@+id/imageView" android:src="@drawable/contact" android:layout_marginTop="6dip" android:layout_marginBottom="6dip" android:layout_marginLeft="4dip" android:layout_marginRight="8dip" android:adjustViewBounds="true" android:layout_height="50dip" android:layout_width="50dip"></ImageView>
        <LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/innerLayout">
            <TextView android:text="Profile" android:layout_width="wrap_content" android:id="@+id/name" android:textSize="24dip" android:layout_height="wrap_content" android:ellipsize="end" android:scrollHorizontally="true"></TextView>
            <TextView android:text="phoneticName" android:layout_width="wrap_content" android:id="@+id/phoneticName" android:layout_height="wrap_content" android:ellipsize="end" android:scrollHorizontally="true" android:textSize="14dip"></TextView>
        </LinearLayout>
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/listView"></ListView>
</LinearLayout>

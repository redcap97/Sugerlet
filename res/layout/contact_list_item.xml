<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
    <ImageView android:src="@drawable/contact" android:layout_marginBottom="6dip" android:layout_marginTop="6dip" android:adjustViewBounds="true" android:layout_marginLeft="4dip" android:layout_height="40dip" android:layout_width="40dip" android:id="@+id/imageView" android:layout_marginRight="10dip"></ImageView>
    <LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:id="@+id/innerLayout" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:text="Name" android:id="@+id/name" android:layout_height="wrap_content" android:textSize="20dip"></TextView>
        <TextView android:layout_width="wrap_content" android:text="PhoneticName" android:id="@+id/phoneticName" android:layout_height="wrap_content" android:textSize="14dip"></TextView>
    </LinearLayout>
</LinearLayout>

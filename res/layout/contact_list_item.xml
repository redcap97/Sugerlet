<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical">
    <ImageView android:src="@drawable/contact" android:layout_marginBottom="6dip" android:layout_marginTop="6dip" android:adjustViewBounds="true" android:layout_marginLeft="4dip" android:layout_marginRight="14dip" android:layout_height="40dip" android:layout_width="40dip" android:id="@+id/imageView"></ImageView>
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout">
        <TextView android:layout_width="wrap_content" android:text="Name" android:layout_height="wrap_content" android:id="@+id/name" android:textSize="20dip"></TextView>
        <TextView android:layout_width="wrap_content" android:text="PhoneticName" android:textSize="14dip" android:layout_height="wrap_content" android:id="@+id/phoneticName"></TextView>
    </TableLayout>
</LinearLayout>
